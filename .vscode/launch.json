    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch auto",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/decimalniner",
            "cwd": "${workspaceFolder}" // This ensures config.yaml is found at "."
        },
        {
            "name": "Launch debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/decimalniner",
            "cwd": "${workspaceFolder}" // This ensures config.yaml is found at "."
        }
        ,
        // lauch with --mock flag
        {
            "name": "Launch debug with mock",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/decimalniner",
            "cwd": "${workspaceFolder}", // This ensures config.yaml is found at "."
            "args": [
                "--mock"
            ]
        }
    ]
}